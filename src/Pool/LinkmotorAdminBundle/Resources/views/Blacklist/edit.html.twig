{% extends 'PoolLinkmotorBundle::layout.html.twig' %}

{% block subnav %}
    {% include 'PoolLinkmotorAdminBundle:Blacklist:breadcrumb.html.twig' %}
{% endblock %}

{% block content %}
    <form class="uk-form uk-form-horizontal" action="{{ path('pool_linkmotor_explorer_blacklist_edit', {id:blacklistItem.id}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}

        <fieldset>
            <legend>{% trans %}Edit blacklisted domain{% endtrans %}</legend>
            {{ form_rest(form) }}
        </fieldset>

        <input class="uk-button uk-button-primary" type="submit" value="{% trans %}Save{% endtrans %}" />
        <a class="uk-button-small uk-button-link lmcancelbutton" href="{{ path('pool_linkmotor_explorer_blacklist_index') }}">
            {% trans %}Cancel{% endtrans %}
        </a>
    </form>
{% endblock %}
