{% extends 'PoolLinkmotorBundle::layout.html.twig' %}

{% block title %}{% trans %}Edit{% endtrans %} - {% trans %}Keywords{% endtrans %} - {% trans %}Explorer{% endtrans %} - {% endblock %}

{% block subnav %}
    {% include 'PoolLinkmotorAdminBundle:Keyword:breadcrumb.html.twig' %}
{% endblock %}

{% block content %}
    <form class="uk-form uk-form-horizontal" action="{{ path('pool_linkmotor_explorer_keyword_edit', {id:keyword.id}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}

        <fieldset>
            <legend>{% trans %}Edit keyword{% endtrans %}</legend>
            {{ form_row(form.market) }}
            {{ form_row(form.importLimit) }}
            <div class="uk-form-controls uk-text-muted uk-text-small">
                <p style="margin-top: 5px;">
                    {{ 'form.explorer.keyword.importLimit.help'|trans }}
                </p>
            </div>
            {{ form_row(form.importInterval) }}
            {{ form_row(form.assignedTo) }}
            {{ form_rest(form) }}
        </fieldset>

        <input class="uk-button uk-button-primary" type="submit" value="{% trans %}Save{% endtrans %}" />
        <a class="uk-button" href="{{ path('pool_linkmotor_explorer_keyword_index') }}">
            {% trans %}Cancel{% endtrans %}
        </a>
    </form>
{% endblock %}
