{% extends 'PoolLinkmotorBundle::login.html.twig' %}

{% block content %}
    <div class="uk-panel uk-width-1-3 uk-container-center">
	    <p class="uk-text-center">
	        <a href="{{ path('pool_linkmotor_index') }}">
	            <img src="{{ asset('bundles/poollinkmotor/img/logo.png') }}" width="180" class="logo" alt="Linkmotor">
	        </a>
	    </p>
        <div id="loginbox">
            {% if not validToken %}
                <h2>{% trans %}Error{% endtrans %}</h2>
                <p>{% trans %}Link is (no longer) valid!{% endtrans %}</p>
                <a class="uk-button-small uk-button-link" href="{{ path('pool_linkmotor_forgot_password') }}">
                    {% trans %}Forgot password?{% endtrans %}
                </a>
            {% else %}
                <form class="uk-form" action="{{ path('pool_linkmotor_reset_password', {userId:validToken.user.id, validationId:validationId}) }}" method="post">
                    <fieldset>
                        {{ form_widget(form) }}
                    </fieldset>

                    <button type="submit" class="uk-button uk-button-primary">{% trans %}Save new password{% endtrans %}</button><br>
                    <small><a class="lmcancelbutton" href="{{ path('login') }}">{% trans %}Cancel{% endtrans %}</a></small>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
