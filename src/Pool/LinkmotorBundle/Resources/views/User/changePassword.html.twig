{% extends 'PoolLinkmotorBundle::layout.html.twig' %}

{% block subnav %}
    {% include 'PoolLinkmotorBundle:User:subnav.html.twig' with {active:'password'} %}
{% endblock %}

{% block content %}
    <form class="uk-form uk-form-horizontal" autocomplete="off" action="{{ path('pool_linkmotor_user_change_password') }}" method="post">
        <fieldset>
            {{ form_widget(form) }}
        </fieldset>

        <button type="submit" class="uk-button uk-button-primary">{% trans %}Save{% endtrans %}</button>
        <a class="uk-button-small uk-button-link lmcancelbutton" href="{{ path('pool_linkmotor_index') }}">{% trans %}Cancel{% endtrans %}</a>
    </form>
{% endblock %}
