{% extends 'PoolLinkmotorBundle::login.html.twig' %}

{% block content %}
    {% if error %}
        <div class="uk-alert uk-alert-danger"><p>{{ error.message|trans }}</p></div>
    {% endif %}


<div class="uk-panel uk-width-large-1-3 uk-width-medium-1-2 uk-container-center">
    <p class="uk-text-center">
        <a href="{{ path('pool_linkmotor_index') }}">
            <img src="{{ asset('bundles/poollinkmotor/img/logo.png') }}" width="180" class="logo" alt="Linkmotor">
        </a>
    </p>

    <div id="loginbox">
        <form class="uk-form" action="{{ path('login_check') }}" method="post">
            <fieldset>
                <legend>{% trans %}Login{% endtrans %}</legend>
                <div class="uk-form-row">
                    <label class="uk-form-label" for="username"><strong>{% trans %}E-Mail{% endtrans %}</strong></label>
                    <div class="uk-form-controls">
                        <input type="text" class="uk-form-large uk-width-1-1" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                </div>

                <div class="uk-form-row">
                    <label class="uk-form-label" for="password"><strong>{% trans %}Password{% endtrans %}</strong></label> <small>(<a tabindex="-1" href="{{ path('pool_linkmotor_forgot_password', {username:last_username, _locale:locale}) }}">{% trans %}Forgot password?{% endtrans %}</a></small>)
                    <div class="uk-form-controls">
                        <input type="password" class="uk-form-large uk-width-1-1" id="password" name="_password" />
                    </div>
                </div>

                <div class="uk-form-row">
                    <div class="uk-form-controls">
                        <label class="uk-form-label">
                            <input type="checkbox" name="_remember_me"> {% trans %}Keep me logged in{% endtrans %}
                        </label>
                    </div>
                </div>
            </fieldset>
            <button class="uk-button uk-button-primary uk-width-1-1 uk-button-large" type="submit">{% trans %}Login{% endtrans %}</button>
        </form>
        <p class="uk-text-center uk-text-small uk-text-muted">{{ linkmotorVersion }}</p>
    </div>

</div>
{% endblock %}
