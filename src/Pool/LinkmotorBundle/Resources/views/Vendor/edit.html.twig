{% block content %}

    {% include 'PoolLinkmotorBundle:Vendor:viewsubnav.html.twig' with {active:'edit'} %}

    <form class="uk-form uk-form-horizontal" action="{{ path('pool_linkmotor_vendors_edit', {id:vendor.id}) }}" method="post" {{ form_enctype(form) }}>
