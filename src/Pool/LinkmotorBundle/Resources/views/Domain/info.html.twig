<table class="uk-table uk-table-striped">
    <h3 class="uk-panel-title"><i class="uk-icon-info-circle"></i> Domain-Info</h3>
    <thead>
        <tr>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="uk-width-custom uk-text-bold" style="width: 150px;">{% trans %}Domain{% endtrans %}</td>
            <td>
                <a href="{{ path('pool_linkmotor_domains_view', {id:backlink.page.subdomain.domain.id}) }}">
                    {{ backlink.page.subdomain.domain.nameForDisplay }}
                </a>
            </td>
        </tr>
        <tr>
            <td class="uk-width-custom uk-text-bold" style="width: 150px;">{% trans %}Vendor{% endtrans %}</td>
            <td>
                {% if backlink.page.subdomain.vendor %}
                    <a class="uk-text-muted" href="{{ path('pool_linkmotor_vendors_view', {id:backlink.page.subdomain.vendor.id}) }}"
                       data-uk-tooltip="{pos:'bottom'}" title="Subdomain-{% trans %}Vendor{% endtrans %}">
                        {{ backlink.page.subdomain.vendor.displayName }}
                    </a>
                {% elseif backlink.page.subdomain.domain.vendor %}
                    <a href="{{ path('pool_linkmotor_vendors_view', {id:backlink.page.subdomain.domain.vendor.id}) }}">
                        {{ backlink.page.subdomain.domain.vendor.displayName }}
                    </a>
                {% else %}
                    <a class="uk-text-muted" href="{{ path('pool_linkmotor_domains_set_vendor', {id:backlink.page.subdomain.domain.id}) }}">
                        <i class="uk-icon-plus-square"></i> <small>{% trans %}add{% endtrans %}</small>
                    </a>
                {% endif %}
            </td>
        </tr>
        <tr>
            <td class="uk-width-custom uk-text-bold" style="width: 150px;">{% trans %}Assigned to{% endtrans %}</td>
            <td>
                {{ backlink.assignedTo.displayName }}
            </td>
        </tr>
    </tbody>
</table>
